<configs>
	<append xpath="/items">

	<item name="PowerCell">
	<property name="HoldType" value="3"/>
	<property name="CustomIcon" value="canister"/>
	<property name="DescriptionKey" value="PowerCellDesc"/>	
	<property name="Meshfile" value="#@modfolder:Resources/PowerCells.unity3d?PowerCell2"/>
	<property name="DropMeshfile" value="#@modfolder:Resources/PowerCells.unity3d?PowerCell2"/>
